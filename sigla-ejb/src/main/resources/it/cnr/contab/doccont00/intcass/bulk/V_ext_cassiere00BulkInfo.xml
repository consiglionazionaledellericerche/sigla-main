<bulkInfo
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="https://contab.cnr.it/schema/SIGLA" 
		xsi:schemaLocation="https://contab.cnr.it/schema/SIGLA https://contab.cnr.it/schema/SIGLA/BulkInfo_1_5.xsd">
	<fieldProperty
		name="nome_file"
		property="nome_file"
		maxLength="50"
		inputSize="50"
		inputType="TEXT"
		label="Nome File"
		caseSensitiveSearch="false" />
	<fieldProperty
		name="esercizio"
		property="esercizio"
		inputType="TEXT"
		label="Esercizio" />
	<fieldProperty
		name="data_inizio_rif"
		property="data_inizio_rif"
		inputType="TEXT"
		formatName="date_short"
		label="Data inizio rif."/>
	<fieldProperty
		name="data_fine_rif"
		property="data_fine_rif"
		inputType="TEXT"
		formatName="date_short"
		label="Data fine rif."/>
	<formFieldProperty
		name="esercizio" />
	<formFieldProperty
		name="nome_file" />
	<formFieldProperty
		name="data_inizio_rif" />
	<formFieldProperty
		name="data_fine_rif" />
		
	<columnFieldProperty
		name="esercizio" />
	<columnFieldProperty
		name="nome_file" 
		style="width:300px" />
	<columnFieldProperty
		name="data_inizio_rif" />
	<columnFieldProperty
		name="data_fine_rif" />

	<findFieldProperty
		name="nome_file" />
	<findFieldProperty
		name="data_inizio_rif" />
	<findFieldProperty
		name="data_fine_rif" />
		
</bulkInfo>