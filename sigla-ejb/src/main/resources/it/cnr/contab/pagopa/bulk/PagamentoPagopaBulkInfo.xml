<bulkInfo
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="https://contab.cnr.it/schema/SIGLA" 
		xsi:schemaLocation="https://contab.cnr.it/schema/SIGLA https://contab.cnr.it/schema/SIGLA/BulkInfo_1_5.xsd">
	<fieldProperty
		name="id"
		property="id"
		label="Id."
		inputType="TEXT"
		enabledOnInsert="false"
		enabledOnEdit="false"
		enabledOnSearch="false"
		enabledOnFreeSearch="false"
		style="text-align: right"
		nullable="false" />
	<fieldProperty
		name="iur"
		property="iur"
		maxLength="50"
		inputType="ROTEXT"
		label="Identificativo Univoco di Riscossione"
		inputCssClass=" w-100"
		enabledOnSearch="true"
		enabledOnFreeSearch="true"
		nullable="false" />
	<fieldProperty
			name="importo"
			property="importo"
			label="Importo"
			inputType="TEXT"
			formatName = "it.cnr.contab.util.EuroFormat"
			maxLength="16"
			inputSize="16"
			enabledOnSearch="true"
			nullable="false"
	/>
	<fieldProperty
			name="causale"
			property="causale"
			maxLength="1000"
			cols="80"
			rows="3"
			inputType="TEXTAREA"
			nullable="false"
			label="Causale"
			enabledOnSearch="true"
			enabledOnFreeSearch="true"/>
	<fieldProperty
		name="rpp"
		property="rpp"
		inputType="ROTEXT"
		inputSize="50"
		maxLength="20"
		enabledOnSearch="true"
		label="RPP" />
	<fieldProperty
			name="ccp"
			property="ccp"
			inputType="ROTEXT"
			inputSize="50"
			maxLength="20"
			enabledOnSearch="true"
			label="Codice Contesto Pagamento" />
	<fieldProperty
		name="dtPagamento"
		property="dtPagamento"
		inputType="TEXT"
		inputSize="10"
		nullable="false"
		formatName="date_short"
		enabledOnSearch="true"
		label="Data" />
	<fieldProperty
			name="stato"
			property="stato"
			inputType="TEXT"
			inputSize="10"
			maxLength="3"
			enabledOnInsert="false"
			enabledOnEdit="false"
			enabledOnSearch="false"
			enabledOnFreeSearch="false"
			nullable="false"
			label="Stato" />
	<formFieldProperty
			name="iur" />
	<formFieldProperty
		name="ccp" />
	<formFieldProperty
			name="causale"/>
	<formFieldProperty
			name="importo"/>
	<formFieldProperty
		name="rpp" />
	<formFieldProperty
		name="dtPagamento"/>
	<formFieldProperty
			name="stato" />
	<columnFieldProperty
			name="importo" />
	<columnFieldProperty
			name="dtPagamento" />
	<columnFieldProperty
		name="iur" />
	<columnFieldProperty
		name="ccp" />
	<columnFieldProperty
			name="rpp" />
	<columnFieldProperty
			name="causale" />
	<columnFieldProperty
			name="stato" />
	<findFieldProperty
			name="stato" />
	<findFieldProperty
		name="ccp" />
	<findFieldProperty
			name="causale" />
	<findFieldProperty
			name="importo" />
	<findFieldProperty
			name="rpp" />
	<findFieldProperty
			name="iur" />
	<findFieldProperty
		name="stato" />
	<findFieldProperty
		name="dtPagamento" />
</bulkInfo>