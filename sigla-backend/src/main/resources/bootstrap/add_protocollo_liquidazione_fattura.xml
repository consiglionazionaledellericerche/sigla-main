    <changeSet author="marco.spasiano" id="add_protocollo_liquidazione_fattura">
        <addColumn tableName="fattura_passiva">
            <column name="dt_protocollo_liq" type="${date.type}"/>
            <column name="nr_protocollo_liq" type="VARCHAR(20)"/>
        </addColumn>
        <addColumn tableName="parametri_cds">
            <column name="fl_obblig_liq_fatt" type="CHAR(1)" remarks="Indica se Ã¨ obbligatorio allegare il provvedimento di liquidazione alla fattura. Valori possibili Y/N"/>
        </addColumn>
    </changeSet>
    <changeSet author="marco.spasiano" id="add_protocollo_liquidazione_fattura_massiva">
        <insert tableName="accesso">
            <column name="cd_accesso" type="VARCHAR(20)" value="AMMFATTURDOCLIQUIMAS"/>
